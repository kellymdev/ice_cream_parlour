<h2>New Day for <%= @game.name %></h2>

<%= render partial: 'games/inventory' %>

<p>Today's milk price is: $<%= format_price(@day.milk_price) %></p>
<p>Today's sugar price is: $<%= format_price(@day.sugar_price) %></p>

<% if @errors.present? %>
  <ul class="error-list">
    <%= render partial: 'shared/error', collection: @errors %>
  </ul>
<% end %>

<%= form_with model: [@game, @day], local: true do |f| %>
  <%= f.hidden_field :milk_price, value: @day.milk_price %>
  <%= f.hidden_field :sugar_price, value: @day.sugar_price %>

  <%= f.label :milk, 'How much milk do you need?' %>
  <%= f.text_field :milk %>

  <%= f.label :sugar, 'How much sugar do you need?' %>
  <%= f.text_field :sugar %>

  <%= f.label :ice_creams_to_make, 'How many ice creams will you make?' %>
  <%= f.text_field :ice_creams_to_make %>

  <%= f.label :ice_cream_price, 'What price will you sell your ice creams for?' %>
  <%= f.text_field :ice_cream_price %>

  <%= f.submit 'Make Ice Creams' %>
<% end %>

<div class="back-link">
  <%= link_to 'Back to Game', game_path(@game) %>
</div>