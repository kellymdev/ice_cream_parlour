<h1>New Game</h1>

<% if @game.errors.any? %>
  <ul>
    <%= render partial: 'shared/error', collection: @game.errors.full_messages %>
  </ul>

<% end %>

<%= form_with model: @game, local: true do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.submit 'Create Game', class: 'button' %>
<% end %>

<div class='back-link'>
  <%= link_to 'Back to Games List', games_path %>
</div>