<h1>Ice Cream Parlour</h1>

<% if flash[:success].present? %>
  <div class="success-message">
    <%= flash[:success] %>
  </div>
<% end %>

<%= link_to 'New Game', new_game_path, class: 'button' %>

<table class="games-list">
  <tr>
    <th>Name</th>
    <th>Balance ($)</th>
    <th>Profit/Loss ($)</th>
    <th></th>
  </tr>

  <%= render partial: 'game', collection: @games %>
</table>
